#@mainLayout()

<div class="blog-header">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1 class="blog-title">$t.name</h1>
                <p class="lead blog-description">$t.subtitle</p>
            </div>
            <div class="col-sm-4">
                <img src="/images/logo.png" />
            </div>
        </div>
    </div>
</div>

<div class="container">

<div class="row">

    <div class="col-sm-9 blog-main">

        #foreach($matches in $matchesByType)

        #if($matches.size() > 0)
        <h4>$matches.get(0).matchType</h4>
        #end
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Uhrzeit</th>
                <th scope="col">Gruppe</th>
                <th scope="col">Team 1</th>
                <th scope="col">Team 2</th>
                <th scope="col">Ergebnis</th>
            </tr>
            </thead>
            <tbody>
            #foreach($m in $matches)
            <tr>
                <th scope="row">$m.number</th>
                <td>$m.startTimeFormatted</td>
                #if($m.team1)
                <td>$m.team1.group.name</td>
                #else
                <td>-</td>
                #end
                #if($m.team1)
                <td>$m.team1.name</td>
                #else
                <td>$m.dummyTeam1</td>
                #end
                #if($m.team2)
                <td>$m.team2.name</td>
                #else
                <td>$m.dummyTeam2</td>
                #end
                #if($m.status.toString() != "new")
                <td>$m.goalsTeam1 : $m.goalsTeam2</td>
                #else
                <td>- : -</td>
                #end
            </tr>
            #end
            </tbody>
        </table>

        #if($foreach.count == 1)
        #set($timeInMin = $t.matchTimeSeconds / 60)
        <p class="lead blog-description">Spielzeit: $timeInMin Minuten</p>
        #end

        <div class="row">&nbsp;</div>

        #end

    </div><!-- /.blog-main -->

    <div class="col-sm-3 blog-sidebar">

        #foreach($g in $t.groups)
        <div class="sidebar-module">
            <table class="table-sm">
                <thead class="thead-dark">
                <tr>
                    <th scope="col" colspan="4">$g.name</th>
                </tr>
                </thead>
                <tbody>
                #foreach($team in $g.getTeams())
                #if($t.qualiCount % 2 != 0 && $foreach.count == $t.qualiCount)
                <tr class="table-warning">
                #elseif($foreach.count <= $t.qualiCount)
                <tr class="table-success">
                #else
                <tr>
                #end
                    <th scope="row" class="col-md-1">$foreach.count.</th>
                    <td class="col-md-3">$team.name</td>
                    <td class="col-md-2">-:-</td>
                    <td class="col-md-2">-</td>
                </tr>
                #end
                </tbody>
            </table>
        </div>
        #end

    </div><!-- /.blog-sidebar -->

</div><!-- /.row -->

</div><!-- /.container -->
#end